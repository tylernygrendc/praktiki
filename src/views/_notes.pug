        .tabs
            ul.tablist(aria-role="tablist")
                li: button.tab.tab--active(role="tab")
                    .tab__icon recent_patient
                    .tab__text Summary
                    .tab__indicator
                li: button.tab(role="tab")
                    .tab__icon account_tree
                    .tab__text Records
                    .tab__indicator
