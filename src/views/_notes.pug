    .layout__focus-pane
        nav.controls
            ul.controls__list--hidden
                li: button.btn.btn--text 
                    .btn__icon refresh
                    .btn__state
            ul.controls__list
                li: button.btn.btn--text 
                    .btn__icon keyboard_arrow_left
