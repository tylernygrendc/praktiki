section#schedule.layout
    .layout__focus-pane
        .agenda
            nav.agenda__controls
            ul.controls__list
                li: button.btn.btn--text
                    .btn__icon keyboard_arrow_left
                    .btn__state
                li: button.btn.btn--text
                    .btn__icon keyboard_arrow_right
                    .btn__state
                li: button.chip
                    .chip__label January
                    .chip__icon keyboard_arrow_down
                    .chip__state
                li: button.chip
                    .chip__label 2024
                    .chip__icon keyboard_arrow_down
                    .chip__state
            .agenda__head
                each day in ["sun", "mon", "tue", "wed", "thu", "fri", "sat"]
                    button.column
                        .column__day #{ day }
                        .column__date 00
                        .column__event
            .agenda__body: .body__grid
                each day in ["sun", "mon", "tue", "wed", "thu", "fri", "sat"]
                    .column

    .layout__support-pane
        .tabs
            ul.tablist(aria-role="tablist")
                    li: button.tab.tab--active(role="tab")
                        .tab__icon task_alt
                        .tab__text Tasks
                        .tab__indicator
                    li: button.tab(role="tab")
                        .tab__icon event_upcoming
                        .tab__text Upcoming
                        .tab__indicator
            .tabpanel
            .tabpanel.tabpanel--inactive