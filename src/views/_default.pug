doctype html
html(lang="en")
    head
        block meta
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            title #{title} | Praktiki Software
            link(rel="shortcut icon", media="screen and (prefers-color-scheme: dark)" href=`../assets/${asset}/favicon/light.svg`, type="image/xml+svg")
            link(rel="shortcut icon", media="screen and (prefers-color-scheme: light)" href=`../assets/${asset}/favicon/dark.svg`, type="image/xml+svg")
            meta(name="description", content=`${description}`)
        block link
            link(rel="stylesheet", href=`../css/${asset}.css`)
        block script
            script(defer src=`../js/${asset}.js`)
    body: block body
