{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source":"/",
        "destination":"/about.html"
      },
      {
        "source":"/about",
        "destination":"/about.html"
      },
      {
        "source":"/features",
        "destination":"/about.html#features"
      },
      {
        "source":"/pricing",
        "destination":"/about.html#features"
      },
      {
        "source": "/auth",
        "destination": "/auth.html"
      },
      {
        "source": "/auth/**",
        "function": "routes"
      }
    ]
  },
  "functions": [
    {
      "source": "src",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
